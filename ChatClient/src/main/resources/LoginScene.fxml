<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.online.controllers.LoginSceneController">
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>
        <Label text="Login:" alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="labLogin" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Password:" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="labPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <Button fx:id="btnLogin" prefWidth="Infinity" lineSpacing="10.0" GridPane.rowIndex="0" GridPane.columnIndex="0"
                mnemonicParsing="false" onAction="#btnLogin"
                text="Login"/>
        <Button fx:id="btnCancel" prefWidth="Infinity" lineSpacing="10.0" GridPane.rowIndex="0" GridPane.columnIndex="1"
                mnemonicParsing="false" onAction="#btnCancel"
                text="Cancel"/>
    </GridPane>
</VBox>
