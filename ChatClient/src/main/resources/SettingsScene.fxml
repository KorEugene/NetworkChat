<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.online.controllers.SettingsSceneController">
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>
        <Label text="IP address:" textAlignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="labIPAddress" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Incoming port:" textAlignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="labIncomingPort" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Outgoing port:" textAlignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="labOutgoingPort" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <Button fx:id="btnApplySettings" prefWidth="Infinity" lineSpacing="10.0" mnemonicParsing="false"
                onAction="#applyButtonAction"
                text="Apply" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Button fx:id="btnCancelSettings" prefWidth="Infinity" lineSpacing="10.0" mnemonicParsing="false"
                onAction="#closeButtonAction"
                text="Cancel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    </GridPane>
</VBox>
